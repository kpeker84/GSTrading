@model Product
@{
    ViewBag.Title = "APOCAN | Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/bootstrap-4.4.1-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/stack-interface.css" rel="stylesheet" />
    <link href="~/css/theme-charcoal.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/assets/bootstrap-4.4.1-dist/js/bootstrap.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:200,300,400,400i,500,600,700" rel="stylesheet">

</head>
<body data-smooth-scroll-offset="77">
    <div class="nav-container"> </div>
    <div class="main-container">
        <section class="bg--primary text-center space--xs">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1><br>@Model.ProductName</h1>
                        <ol class="breadcrumbs">
                            <li><a href="/">Home</a></li>
                            <li><a href="/Professional/Professionals">Products</a></li>
                            <li>@Model.ProductName</li>
                        </ol>
                        <hr>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="row justify-content-around">
                    <div class="col-md-7 col-lg-6">
                        <div class="slider border--round boxed--border" data-timing="false" data-arrows="true" data-paging="true">
                            <ul class="slides">
                                <li> <img alt="Image" src="@Model.Images[0].ImageUrl"> </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-4">
                        <h2>@Model.ProductName</h2>
                        @*<div class="text-block"> <span class="h4 type--strikethrough inline-block">$@Html.Raw(Model.Price + 2)</span> <span class="h4 inline-block">@Model.Price</span> </div>*@
                        <div class="text-block"> <span class="h4 type--strikethrough inline-block">$@Html.Raw(Model.Price + 2)</span> <span class="h4 inline-block">10.00</span> </div>
                        <p> @Model.Description </p>
                        <ul class="accordion accordion-2">
                            <li>
                                <div class="accordion__title"> <span class="h5">Specifications</span> </div>
                                <div class="accordion__content">
                                    <ul class="bullets">
                                        <li><span>PZN: @Model.PZN</span></li>
                                        <li><span>THC: @Model.THC</span></li>
                                        <li><span>CBD: @Model.CBD</span></li>
                                        <li><span>Genetik: @Model.Genetik<br></span></li>
                                        <li><span>Darreichungsform: @Model.Darreichungsform<br></span></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="active">
                                <div class="accordion__content">
                                    <ul>
                                        <li><span>Product: 3.5”W X 3.0”H X 3.0”D</span></li>
                                        <li><span>Packaging: 7”W X 6”H X 5”D </span></li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div class="accordion__title"> <span class="h5">Shipping Info</span> </div>
                                <div class="accordion__content">
                                    <p> Generally ships between 2 - 4 working days from order confirmation. Orders only confirmed once payment has successfully processed. NOTE: When using services such as Skrill, payments can take longer to process (approx. 4 days). </p>
                                </div>
                            </li>
                        </ul>
                        @*<div class="row">
                                <input type="number" id="productAmount" min="1" style="width:70px;height:45px" value="1" required />
                            </div>
                            <div class="row">
                                <button class="btn btn--primary" style="min-width:100px;margin-top:15px" onclick="sendToCart(@Model.ID)">Add To Cart</button>
                            </div>*@



                    </div>
                </div>
            </div>
        </section>
        <section class="text-center cta cta-4 space--xxs border--bottom bg--secondary">
            <div class="container">
                <div class="row">
                    <div class="col-md-12"> <span class="label label--inline">for more</span> <span>Back to &nbsp;<a href="@Url.RouteUrl("Professionals")">Products</a></span> </div>
                </div>
            </div>
        </section>
    </div>
</body>

</html>
<script>
    function sendToCart(id) {
        var amountJs = $("#productAmount").val();
        $.get("../../Shopping/AddToCart/?id=" + id + "&amount=" + amountJs + "", function response(res) {
            if (res) {
                swal({
                    title: "Success!",
                    text: "Added to cart!",
                    icon: "success",
                });
                setTimeout(function () { window.location.reload() }, 1500);

            }
            else {
                swal({
                    title: "Warning!",
                    text: "Something went wrong!",
                    icon: "error",
                });
                setTimeout(function () { window.location.reload() }, 1500);
            }
        });
    }
</script>

